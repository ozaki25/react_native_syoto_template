{
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["jest"],
  "rules": {
    "max-len": [1, { "code": 100 }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": [2, { "ignore": ["navigation", "children"] }]
  }
}
